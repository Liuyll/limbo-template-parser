{
    "compilerOptions": {
        "module": "commonjs",
        "lib": ["es2017","es6","dom"],
        "experimentalDecorators": true,
        "target": "ES6",
        "allowSyntheticDefaultImports": true,
        "outDir": "./lib",
        "sourceMap": false,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "incremental": true
    },    
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ],
    
}
